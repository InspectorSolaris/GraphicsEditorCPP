<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="367dp"
            android:layout_height="406dp" app:srcCompat="@android:color/background_light"
            android:id="@+id/imageForProcessing" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            android:contentDescription="@string/imageForProcessing" app:layout_constraintHorizontal_bias="0.5"
            tools:srcCompat="@android:color/white" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="368dp"
            android:layout_height="121dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/constraintLayout">

        <Button
                android:text="@string/gallery_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/pickFromGallery"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/pickFromCamera" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.5"
                android:onClick="processButtonPressing"/>
        <Button
                android:text="@string/camera_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/pickFromCamera"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintTop_toBottomOf="@+id/pickFromGallery" android:onClick="processButtonPressing"
        />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>