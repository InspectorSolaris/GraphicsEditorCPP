<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorPrimary"
>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="54dp" android:background="@color/colorPrimaryDark"
            android:id="@+id/constraintLayout" app:layout_constraintBottom_toTopOf="@+id/imageButtonPickFirst"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">


        <ImageButton
                android:layout_width="54dp"
                android:layout_height="54dp"
                app:srcCompat="@drawable/ic_undo"
                android:id="@+id/imageButtonUndo"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:background="#00FFFFFF" android:scaleType="centerInside"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintEnd_toStartOf="@+id/imageButtonRedo"
                android:contentDescription="@string/image_button_undo"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"/>
        <ImageButton
                android:layout_width="54dp"
                android:layout_height="54dp"
                app:srcCompat="@drawable/ic_redo"
                android:id="@+id/imageButtonRedo"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:background="#00FFFFFF" android:scaleType="centerInside"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintEnd_toStartOf="@+id/imageButtonPickNew"
                android:contentDescription="@string/image_button_redo"/>
        <ImageButton
                android:layout_width="54dp"
                android:layout_height="54dp"
                app:srcCompat="@drawable/ic_image"
                android:id="@+id/imageButtonPickNew"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:background="#00FFFFFF" android:scaleType="centerInside"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/image_button_pick_new"/>
    </android.support.constraint.ConstraintLayout>
    <ImageButton
            android:layout_width="408dp"
            android:layout_height="602dp" app:srcCompat="@drawable/ic_add_circle_outline"
            android:id="@+id/imageButtonPickFirst" android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
            android:background="#00FFFFFF" android:scaleType="centerInside"
            android:layout_marginTop="0dp" android:layout_below="@+id/constraintLayout"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="0dp"
            android:contentDescription="@string/image_button_pick_first"/>

</RelativeLayout>