<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/colorPrimary"
>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="54dp" android:background="@color/colorPrimaryDark"
                android:id="@+id/constraintLayout"
        >


            <ImageButton
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    app:srcCompat="@drawable/ic_undo"
                    android:id="@+id/imageButtonUndo"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:background="#00FFFFFF" android:scaleType="centerInside"
                    app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintEnd_toStartOf="@+id/imageButtonRedo"
                    android:contentDescription="@string/image_button_undo"
                    android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="1.0" android:onClick="processButtonPressing"/>
            <ImageButton
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    app:srcCompat="@drawable/ic_image"
                    android:id="@+id/imageButtonPickNew"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:background="#00FFFFFF" android:scaleType="centerInside"
                    app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@string/image_button_pick_new" android:onClick="processButtonPressing"/>
            <ImageButton
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    app:srcCompat="@drawable/ic_redo"
                    android:id="@+id/imageButtonRedo"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:background="#00FFFFFF" android:scaleType="centerInside"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toStartOf="@+id/imageButtonPickNew"
                    android:contentDescription="@string/image_button_redo" android:onClick="processButtonPressing"/>
        </android.support.constraint.ConstraintLayout>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="550dp" app:srcCompat="@drawable/ic_add_circle_outline"
                android:id="@+id/imageButtonPickFirst" android:layout_alignParentEnd="true"
                android:background="@color/colorPrimary" android:scaleType="centerInside"
                android:layout_below="@+id/constraintLayout"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/image_button_pick_first" android:onClick="processButtonPressing"
        />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageButtonPickFirst" android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    app:srcCompat="@drawable/ic_star_border_black_24dp"
                    android:id="@+id/imageButtonUndo4"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/colorPrimaryDark" android:scaleType="centerInside"
                    app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintEnd_toStartOf="@+id/imageButtonRedo"
                    android:contentDescription="@string/image_button_undo"
                    android:layout_marginStart="0dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="1.0" android:onClick="processButtonPressing"
                    android:layout_weight="1" android:layout_alignTop="@+id/null"
                    android:layout_alignStart="@+id/null"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    app:srcCompat="@drawable/ic_palette_black_24dp"
                    android:id="@+id/imageButtonRedo2"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/colorPrimaryDark" android:scaleType="centerInside"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toStartOf="@+id/imageButtonPickNew"
                    android:contentDescription="@string/image_button_redo" android:onClick="processButtonPressing"
                    android:layout_weight="1" android:layout_alignTop="@+id/null"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    app:srcCompat="@drawable/ic_file_upload_black_24dp"
                    android:id="@+id/imageButtonPickNew2"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/colorPrimaryDark" android:scaleType="centerInside"
                    app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
                    android:contentDescription="@string/image_button_pick_new"
                    android:onClick="processButtonPressing"
                    android:layout_weight="1" android:layout_alignEnd="@+id/null"/>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>